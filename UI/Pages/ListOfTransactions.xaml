            </charting:Chart>
        </Grid>


        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" Margin="20" Visibility="{Binding Transactions, Converter={StaticResource CollectionVisibilityConverter}, ConverterParameter='!'}">
            <TextBlock Text="No results"></TextBlock>
        </StackPanel>

    </Grid>
</Page>
